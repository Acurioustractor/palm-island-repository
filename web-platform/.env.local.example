# ============================================================================
# Supabase Configuration (Empathy Ledger)
# ============================================================================
# IMPORTANT: Copy this file to .env.local and fill in your actual values
# Your actual keys are in the Supabase dashboard: https://supabase.com/dashboard/project/uaxhjzqrdotoahjnxmbj/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://uaxhjzqrdotoahjnxmbj.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ACCESS_TOKEN=your_access_token_here

# ============================================================================
# AI Configuration
# ============================================================================

# LLM Provider (ollama for local, openai for cloud)
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# OpenAI (for embeddings and fallback)
OPENAI_API_KEY=your_openai_key_here
NEXT_PUBLIC_ENABLE_SEMANTIC_SEARCH=true

# Anthropic (Claude for advanced queries)
ANTHROPIC_API_KEY=your_anthropic_key_here

# ============================================================================
# Vector Database Configuration
# ============================================================================

# Supabase has pgvector built-in, so we'll use that
VECTOR_DB_TYPE=supabase
VECTOR_DIMENSION=768  # For text embeddings
IMAGE_VECTOR_DIMENSION=512  # For CLIP image embeddings

# Alternative: Qdrant (if you want separate vector DB)
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=

# Alternative: Pinecone
# PINECONE_API_KEY=
# PINECONE_ENVIRONMENT=us-east-1-aws
# PINECONE_INDEX=palm-island-content

# ============================================================================
# Application Settings
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Palm Island Community Repository
NODE_ENV=development

# ============================================================================
# AI/ML Settings
# ============================================================================

# Embeddings Model
EMBEDDINGS_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDINGS_PROVIDER=local  # local or openai

# Image Analysis
ENABLE_FACE_RECOGNITION=true
FACE_RECOGNITION_THRESHOLD=0.6
ENABLE_PLACE_RECOGNITION=true
ENABLE_OBJECT_DETECTION=true

# ============================================================================
# Search Configuration
# ============================================================================

# Hybrid search weights
SEMANTIC_SEARCH_WEIGHT=0.7
KEYWORD_SEARCH_WEIGHT=0.3

# Search limits
MAX_SEARCH_RESULTS=50
DEFAULT_SEARCH_RESULTS=20

# ============================================================================
# Cultural Protocol Settings
# ============================================================================

# Elder approval requirements
REQUIRE_ELDER_APPROVAL_FOR_TRADITIONAL_KNOWLEDGE=true
AUTO_DETECT_TRADITIONAL_KNOWLEDGE=true

# Access level defaults
DEFAULT_STORY_ACCESS_LEVEL=community
DEFAULT_PROFILE_VISIBILITY=community

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_AI_CHAT=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_PHOTO_ML=true
ENABLE_PATTERN_RECOGNITION=true
ENABLE_IMPACT_TRACKING=true

# ============================================================================
# Redis Cache (optional - for performance)
# ============================================================================
# REDIS_URL=redis://localhost:6379
# CACHE_TTL_SECONDS=3600

# ============================================================================
# Mapbox (optional - for mapping cultural sites)
# ============================================================================
# NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token

# ============================================================================
# Analytics (optional)
# ============================================================================
# ENABLE_ANALYTICS=true
# ANALYTICS_PROVIDER=plausible  # or google, posthog, etc.

# ============================================================================
# Development Settings
# ============================================================================
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=true
