# Environment Variables Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE (Database, Auth, Storage)
# =============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database connection string (optional, for direct SQL access)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres

# =============================================================================
# SITE CONFIGURATION
# =============================================================================

NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Palm Island Story Server
NEXT_PUBLIC_DEFAULT_ORG_SLUG=picc

# =============================================================================
# AI / ML APIs
# =============================================================================

# OpenAI (for embeddings and AI features)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic Claude (alternative/additional LLM)
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# VECTOR DATABASES (Choose one)
# =============================================================================

# Option 1: Qdrant (Recommended for self-hosted)
# Free tier: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# Option 2: Pinecone (Good for cloud)
# Free tier: https://www.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp-free
PINECONE_INDEX_NAME=palm-island-stories

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features during development
NEXT_PUBLIC_ENABLE_SEMANTIC_SEARCH=true
NEXT_PUBLIC_ENABLE_ANNUAL_REPORTS=true
NEXT_PUBLIC_ENABLE_AI_CATEGORIZATION=false
NEXT_PUBLIC_ENABLE_FACE_RECOGNITION=false

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# Analytics (Plausible, privacy-friendly)
# Free self-hosted or cloud: https://plausible.io/
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=palmisland.org.au

# Error Tracking (Sentry)
# Free tier: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# Email (for notifications)
# Resend (recommended): https://resend.com/
RESEND_API_KEY=re_your-resend-key

# File Upload (if not using Supabase Storage)
# Uploadthing: https://uploadthing.com/
UPLOADTHING_SECRET=sk_live_your-uploadthing-secret
UPLOADTHING_APP_ID=your-app-id

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Skip type checking in build (faster, but not recommended for production)
# SKIP_TYPE_CHECK=false

# Skip environment variable validation
# SKIP_ENV_VALIDATION=false

# =============================================================================
# PRODUCTION ONLY
# =============================================================================

# Node environment
# NODE_ENV=production

# Redis (for caching in production)
# REDIS_URL=redis://localhost:6379

# Cloudflare (for CDN/caching)
# CLOUDFLARE_ZONE_ID=your-zone-id
# CLOUDFLARE_API_TOKEN=your-api-token
